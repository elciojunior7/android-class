<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mandanteEscudo"
            android:layout_width="49dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/bandeirabrasil"
            tools:src="@drawable/bandeirabrasil"
            tools:srcCompat="@drawable/bandeirabrasil" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mandante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brasil"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mandantePlacar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="7"
                android:textAlignment="gravity"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="X"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/visitante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alemanha"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/visitantePlacar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textAlignment="gravity"
                android:textSize="30sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="49dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/bandeiraalemanha"
            tools:src="@drawable/bandeiraalemanha"
            tools:srcCompat="@drawable/bandeiraalemanha" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/brasilScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1AA33E"
            android:text="Gol"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/alemanhaScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F64D00"
            android:text="Gol"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>